/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"

#include "lw_usb/hdmi_text_controller.h"
#include "Game.h"



void test_screen(){
    int x, y;
    int i;
    // char z = ' ';
    textHDMIColorClr();
    setColorPalette(0, colors[15].red, colors[15].green, colors[15].blue);  // White
    setColorPalette(1, colors[1].red, colors[1].green, colors[1].blue);     // Blue
    setColorPalette(2, colors[9].red, colors[9].green, colors[9].blue);     // Light Blue
    // for (x = 0; x < (COLUMNS); x++)
    // {
    //     for(y = 0; y < (ROWS); y++)
    //     {
    //         hdmi_ctrl->VRAM[(x*2) + y * COLUMNS * 2] = (0x0 << 4) | 0x1;
    //         hdmi_ctrl->VRAM[(x*2) + y * COLUMNS * 2 + 1] = z;
    //     }

    // }


    for (i = 0; i < (COLUMNS * ROWS); i++)
    {
        if(Map_layout[i] == ' ')
        {
            if(i % 2 == 0)
            {
                hdmi_ctrl->VRAM[i * 2] = (0x0 << 4) | 0x1; // color
            }
//            else
//            {
//                hdmi_ctrl->VRAM[i * 2] = (0x0 << 4) | 0x2; // color
//            }
            hdmi_ctrl->VRAM[i * 2 + 1] = ' '; //fill
        }

    }
}

int main()
{
    init_platform();
    test_screen();
    cleanup_platform();
    return 0;
}
// Z = block
// y = left hand button
// x = right hand b utton
// w = button middle
// } = gate
// [ = spike

